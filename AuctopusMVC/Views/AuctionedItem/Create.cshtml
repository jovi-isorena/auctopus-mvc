@model AuctopusMVC.Models.AuctionedItem

@{
    ViewBag.Title = "Create";
    IEnumerable<string> selectList = new List<string>{"Open", "Secret"};
    IEnumerable<string> categoryList = new List<string> { "Antique","Artwork","Clothing","Collectible","Electrical Device","Furniture"};
}
<div class="mt-5">
    @Html.ActionLink("Back to List", "Index", null, new { @class="btn btn-secondary"})
</div>
<h2 >Add New Item</h2>
@ViewBag.imgString
@ViewBag.urlObj
@using (Html.BeginForm("Create", "AuctionedItem", FormMethod.Post)) //,  new { enctype = "multipart/form-data" }
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    
        <div class="mb-3 ">
            @Html.LabelFor(model => model.Name, new { @class = "form-label"})
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger"})
            <br />
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control w-100 m-auto"})
        </div>
        <div class="mb-3 ">
            @Html.LabelFor(model => model.Description, new { @class = "form-label"})
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger"})
            <br />
            @Html.TextAreaFor(model => model.Description, new { @class = "form-control w-100 m-auto"})
        </div>
        <div class="mb-3 ">
            @Html.LabelFor(model => model.ImageURL, new { @class = "form-label"})
            @Html.ValidationMessageFor(model => model.ImageURL, "", new { @class = "text-danger"})
            <br />
            <input type="file" name="ImageURL" id="ImageURL" class="form-control w-100" />
        </div>
        <div class="mb-3 ">
            @Html.LabelFor(model => model.Category, new { @class = "form-label"})
            @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger"})
            <br />
            @Html.DropDownListFor(model => model.Category, new SelectList(categoryList), "Select Category", new { @class="form-select"})
            
        </div>
        <div class="mb-3 ">
                @Html.LabelFor(model => model.BidMethod, new { @class = "form-label"})
                @Html.ValidationMessageFor(model => model.BidMethod, "", new { @class = "text-danger"})
                <br />
                @Html.DropDownListFor(model => model.BidMethod, new SelectList(selectList), "Select Type", new { @class="form-select"})
        </div>
        <div class="mb-3 row">
            <div class="col-6">
                @Html.LabelFor(model => model.AuctionStartDate, new { @class = "form-label"})
                @Html.ValidationMessageFor(model => model.AuctionStartDate, "", new { @class = "text-danger"})
                <br />
                @Html.EditorFor(model => model.AuctionStartDate, new { @class = "form-control w-100 m-auto "})
            </div>
            <div class="col-6">
                @Html.LabelFor(model => model.AuctionStartTime, new { @class = "form-label"})
                @Html.ValidationMessageFor(model => model.AuctionStartTime, "", new { @class = "text-danger"})
                <br />
                @Html.EditorFor(model => model.AuctionStartTime, new { @class = "form-control w-100 m-auto "})
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-6">
                @Html.LabelFor(model => model.AuctionEndDate, new { @class = "form-label"})
                @Html.ValidationMessageFor(model => model.AuctionEndDate, "", new { @class = "text-danger"})
                <br />
                @Html.EditorFor(model => model.AuctionEndDate, new { @class = "form-control w-100 m-auto "})
            </div>
            <div class="col-6">
                @Html.LabelFor(model => model.AuctionEndTime, new { @class = "form-label"})
                @Html.ValidationMessageFor(model => model.AuctionEndTime, "", new { @class = "text-danger"})
                <br />
                @Html.EditorFor(model => model.AuctionEndTime, new { @class = "form-control w-100 m-auto "})
            </div>
        </div>
        <div class="mb-3 ">
                @Html.LabelFor(model => model.InitialBid, new { @class = "form-label"})
                @Html.ValidationMessageFor(model => model.InitialBid, "", new { @class = "text-danger"})
                <br />
                @Html.TextBoxFor(model => model.InitialBid, new { @class = "form-control w-100 m-auto"})
        </div>
       

        

        <p>
            <input type="submit" value="Add Item" class="btn btn-outline-dark w-100"/>
        </p>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
